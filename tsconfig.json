{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ESNext",
		"allowJs": true,
		"module": "CommonJS",
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"paths": {
			"@main/*": ["src/main/*"],
			"@services/*": ["src/main/services/*"],
			"@preload/*": ["src/preload/*"],
			"@renderer/*": ["src/renderer/*"],
			"@assets/*": ["src/renderer/assets/*"],
			"@components/*": ["src/renderer/components/*"],
			"@contexts/*": ["src/renderer/contexts/*"],
			"@styles/*": ["src/renderer/styles/*"],
			"@views/*": ["src/renderer/views/*"],
			"@mytypes/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "out", "dist", ".webpack"]
}
